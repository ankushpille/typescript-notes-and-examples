{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs",               // Works better for Node + Express
    "target": "es2019",                  // Good balance for Node compatibility
    "lib": ["esnext"],                   // Latest ECMAScript features
    "types": ["node"],                   // Include Node.js type definitions
    "esModuleInterop": true,             // Allows default import syntax for CommonJS modules
    "forceConsistentCasingInFileNames": true,

    /* Other Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Node.js options */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"],                     // Compile only the src folder
  "exclude": ["node_modules", "dist"]     // Ignore these during compilation
}
